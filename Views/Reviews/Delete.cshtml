@model HoidayResorts.Data_Entities.Review

@{
    ViewBag.Title = "Delete";
}
<hr class="space" />
<div class="box-semi" data-aos="zoom-in">
    <h2 class="margin-align">Delete Review</h2>
    <hr/>
    <div class="box">
        <h3>Are you sure you want to delete this review?</h3>
        <div>
            <h4><b>'@Model.Title'</b></h4>
            <p>by @Model.ReviewerName</p>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-warning light-shadow"/>
                @Html.ActionLink("Cancel", "Details", "Resorts", new {id = Model.ResortId}, new {@class = "btn btn-primary light-shadow" })
            </div>
        }
    </div>
</div>
